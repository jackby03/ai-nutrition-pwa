// Prisma schema for AI Nutrition PWA

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  name        String?
  email       String   @unique
  password    String
  preferences Json?
  mealPlans   MealPlan[]
}

model Food {
  id        Int    @id @default(autoincrement())
  name      String
  category  String
  calories  Int
  macros    Json?
}

model MealPlan {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  meals     Json
}
